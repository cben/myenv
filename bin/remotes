#!/usr/bin/fish

if [ (count $argv) -eq 0 ]
    set argv .
end

for dir in $argv
    if [ -d $dir ]
        pushd $dir
	if [ -e .git ]
	    echo "$dir - a Git working copy.  remotes:"
	    git remote -v | sed 's/^/  /'
            git svn info ^/dev/null | sed -n 's/^URL:/  git svn URL:\t/p'
	else if [ -e .svn ]
	    echo "$dir - an SVN working copy."
	    svn info | sed -n 's/^URL:/  SVN URL:\t/p'
	end
	popd
    end
end
